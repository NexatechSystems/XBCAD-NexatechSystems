<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_page">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_1">

        <TextView
            android:id="@+id/signInLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="165dp"
            android:layout_weight="1"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="26sp" />



        <TextView
            android:id="@+id/signInInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="210dp"
            android:text="Please fill the details and create account"
            android:textAlignment="center"
            android:textColor="#7D848D"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="335dp"
            android:layout_height="56dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/text_box"
            android:ems="10"
            android:inputType="text"
            android:text="Name" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="335dp"
            android:layout_height="56dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/text_box"
            android:ems="10"
            android:inputType="text"
            android:text="Email" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="335dp"
            android:layout_height="56dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="390dp"
            android:background="@drawable/text_box"
            android:ems="10"
            android:inputType="text"
            android:text="Password" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0D6EFD"
            android:layout_marginStart="250dp"
            android:layout_marginTop="460dp"
            android:text="Forgot Password?"/>

        <Button
            android:id="@+id/button"
            android:layout_width="335dp"
            android:layout_height="56dp"
            android:text="Sign In"
            android:textColor="#FFFFFF"
            android:layout_marginStart="40dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/sign_in_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#707B81"
            android:layout_marginStart="120dp"
            android:layout_marginTop="580dp"
            android:text="Don't have an account?"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0D6EFD"
            android:layout_marginStart="270dp"
            android:layout_marginTop="580dp"
            android:text="Sign Up"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#707B81"
            android:layout_marginStart="180dp"
            android:layout_marginTop="600dp"
            android:text="Or connect"
            />

    </RelativeLayout>

</RelativeLayout>