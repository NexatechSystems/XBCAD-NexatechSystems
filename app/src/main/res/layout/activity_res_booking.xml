<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/resturantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/txtColour"/>


    <TextView
        android:id="@+id/lblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        app:layout_constraintTop_toBottomOf="@id/resturantName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:textColor="@color/txtColour"/>


    <EditText
        android:id="@+id/txtNumPeople"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:hint="Enter your number of people"
        android:background="@drawable/text_box"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/txtName"
        app:layout_constraintStart_toEndOf="@id/lblNumPeople"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:textColor="@color/txtColour"/>

    <TextView
        android:id="@+id/lblNumPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of people:"
        app:layout_constraintTop_toBottomOf="@id/lblName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        android:textColor="@color/txtColour"/>


    <EditText
        android:id="@+id/txtName"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/text_box"
        android:ems="10"
        android:hint="Enter name"
        android:inputType="number"
        android:textColor="@color/txtColour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblNumPeople"
        app:layout_constraintTop_toBottomOf="@id/resturantName" />


    <TextView
        android:id="@+id/lblPhoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number:"
        app:layout_constraintTop_toBottomOf="@id/txtName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:textColor="@color/txtColour"/>


    <EditText
        android:id="@+id/txtPhoneNo"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:hint="Enter your phone number"
        android:inputType="phone"
        android:background="@drawable/text_box"
        android:ems="10"
        app:layout_constraintTop_toBottomOf="@id/txtName"
        app:layout_constraintStart_toEndOf="@id/lblPhoneNo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/txtColour"/>




    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="335dp"
        android:layout_height="56dp"
        android:text="Submit Booking"
        app:layout_constraintTop_toBottomOf="@id/txtPhoneNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="40dp"
        android:background="@drawable/sign_in_button"/>



</androidx.constraintlayout.widget.ConstraintLayout>
